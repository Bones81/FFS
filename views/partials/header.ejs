<% if (user) { %> 
  <aside class="user-greeting">
    <h3>Hello, <%=user.username%>!</h3>
    <a href="/logout">Logout</a>
  </aside>
<% } else { %>
  <aside class="user-greeting">
    <span class="auth-span">New to the site? </span><a href="/register">Register</a>
    <span class="auth-span">Already registered? </span><a href="/login">Login</a>
  </aside>
<% } %>
<nav class="full-nav">
  <a class="screening-bgcolor data-link" href="/screenings">FFS Selections</a>
  <% if (user && user.role === 'admin') { %> 
    <a class="screening-bgcolor data-link" href="/screenings/new">Add a Screening</a>
  <% } %>
  <a class="nomination-bgcolor data-link" href="/nominations">Nomination Archive</a>
  <% if (user && user.role === 'admin' || user && user.role === 'member') { %> 
    <a class="nomination-bgcolor data-link" href="/nominations/new">Submit a Nomination</a>
  <% } %>
  <a class="movie-bgcolor data-link" href="/movies">Movies Database</a>
  <% if (user && user.role === 'admin' || user && user.role === 'member') { %> 
    <a class="movie-bgcolor data-link" href="/movies/new">Add Movie to Database</a>
  <% } %>
    
