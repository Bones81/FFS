<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head.ejs')%>
</head>
<body>
  <header>
    <%- include('../partials/header.ejs')%>
  </header>
  <div class="card show-card">
    <h1 class="page-title"><%=nomination.title.toUpperCase()%></h1>
    <img src="<%=nomination.poster%>" alt="poster for <%=nomination.title%>"><br/>
    <table>
      <tr>
        <td class="info-start-text">Nominated for Screening Date:</td>
        <% let formattedDate = nomination.forWhatScreening.toString().slice(3,15) %> 
        <td class="info-data-text"><%=formattedDate%></td>
      </tr>
      <tr>
        <td class="info-start-text">Submitted By:</td>
        <td class="info-data-text"><%=nomination.submittedBy%></td>
      </tr>
      <tr>
        <td class="info-start-text">Comments:</td>
        <td class="info-data-text"><%=nomination.blurb%></td>
      </tr>

    </table>
    <h3>
      <a href="/nominations/<%=nomination._id%>/edit"><button class="btn edit-btn">Edit nomination Details</button></a>
    </h3>
    
    <form action="/nominations/<%=nomination._id%>/confirm-delete" class="show-form">
      <input type="submit" class='btn delete-btn' value="DELETE nomination from database">
    </form>
  </div>
</body>
</html>