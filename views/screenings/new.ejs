<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs')%>
  </head>
  <body>
    <header><%- include('../partials/header.ejs')%></header>
    <h1 class="page-title">Enter New Screening Info</h1>
    <form action="/screenings" method="POST" id="new-form">
      <table>
        <tr>
          <td class="info-start-text">Date:</td>
          <td class="new-data-text">
            <label for="date">Date of Screening: </label>
            <input type="date" name="date" id="date" />
          </td>
        </tr>
        <tr>
          <td class="info-start-text">Selection ‚≠ê:</td>
          <td class="new-data-text">
            <select name="selection" id="selection">
              <option value="">--No Selection Yet--</option>
              <option value="TEST">Test Selection Value</option>
            </select>
          </td>
        </tr>
        <tr>
          <td class="info-start-text">Notes / Comments:</td>
          <td class="new-data-text">
            <textarea name="notes" rows="4" cols="50" placeholder=""></textarea>
          </td>
        </tr>
        <tr>
          <td class="info-start-text">Nominees:</td>
          <td class="new-data-text">
            <textarea
              name="nominees"
              rows="10"
              cols="50"
              placeholder="Enter titles of nominees, comma-separated."
            ></textarea>
          </td>
        </tr>
      </table>
      <input
        type="submit"
        id="create-btn"
        value="Add new FFS Screening with this data"
      />
    </form>
  </body>
</html>
